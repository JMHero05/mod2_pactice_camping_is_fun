<h1>Add a New Camper</h1>

<%= form_for @camper do |f| %>
  <% if @camper.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@camper.errors.count, "error") %>
        prohibited this camper from being saved:
      </h2>

      <ul>
      <% @camper.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <hr>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br><br>
  <%= f.submit %>
<% end %>